{
  "kind": "collectionType",
  "collectionName": "fact_checks",
  "info": {
    "singularName": "fact-check",
    "pluralName": "fact-checks",
    "displayName": "Fact Check",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "claimSource": {
      "type": "string",
      "required": true
    },
    "rating": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "checkedBy": {
      "type": "string",
      "required": true,
      "default": "DropSpindle"
    },
    "shortContent": {
      "type": "text",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "article": {
      "type": "richtext"
    }
  }
}
